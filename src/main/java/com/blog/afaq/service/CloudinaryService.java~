package com.blog.afaq.service;

import com.cloudinary.Cloudinary;
import com.cloudinary.utils.ObjectUtils;
import lombok.RequiredArgsConstructor;
import org.springframework.stereotype.Service;
import org.springframework.web.multipart.MultipartFile;

import java.io.IOException;
import java.util.Map;

@Service
@RequiredArgsConstructor
public class CloudinaryService {

    private final Cloudinary cloudinary;

    /**
     * Uploads an image to Cloudinary under the "articles" folder.
     */
    public String uploadImage(MultipartFile file) {
        try {
            Map<?, ?> result = cloudinary.uploader().upload(
                    file.getBytes(),
                    ObjectUtils.asMap(
                            "folder", "articles",
                            "access_mode", "public"  // Ensure it's public
                    )
            );
            return (String) result.get("secure_url");
        } catch (IOException e) {
            throw new RuntimeException("Failed to upload image to Cloudinary", e);
        }
    }

    /**
     * Uploads any file type to Cloudinary.
     * PDFs are uploaded as 'raw' resources, images as 'image'.
     */
    public String uploadFile(MultipartFile file, String fileType) {
        try {
            Map<String, Object> options;

            switch (fileType.toUpperCase()) {
                case "PDF":
                case "DOC":
                case "EXCEL":
                    options = ObjectUtils.asMap(
                            "resource_type", "raw",
                            "access_mode", "public"
                    );
                    break;
                case "IMAGE":
                    options = ObjectUtils.asMap(
                            "resource_type", "image",
                            "access_mode", "public"
                    );
                    break;
                case "VIDEO":
                    options = ObjectUtils.asMap(
                            "resource_type", "video",
                            "access_mode", "public"
                    );
                    break;
                default:
                    options = ObjectUtils.asMap(
                            "access_mode", "public"
                    );
                    break;
            }

            Map<?, ?> uploadResult = cloudinary.uploader().upload(file.getBytes(), options);
            return (String) uploadResult.get("secure_url");

        } catch (IOException e) {
            throw new RuntimeException("Failed to upload file to Cloudinary", e);
        }
    }
}
